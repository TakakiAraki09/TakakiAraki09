---
import { BLOG_CONTENTS } from '../../lib/constants';
import { createPath } from '../../lib/utilities';
---
<ul>
	{BLOG_CONTENTS.map(val => (
		<li>
			<a href={createPath(val)}>{val}</a>
		</li>
	))}
</ul>

<style>
ul {
	display: flex;
	flex-direction: column;
	gap: 1px;
	background-color: blue;
	border: 1px solid blue;

	> li {
		cursor: pointer;
	}

	> li > a {
		display: block;
		background-color: white;
		padding: 8px 16px;

		&:before {
			content: "#";
			padding-right: 10px;
			opacity: 0.8;
		}
	}
}
</style>
