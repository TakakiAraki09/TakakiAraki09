---
import { SITE_TITLE } from '../../constants/index.ts';
interface Props {
	title: string;
    type: 'website' | 'blog' | 'article' | 'product';
    description?: string;
    thambnail?: string;
}
// website: WebサイトのTOPページ
// blog: ブログのトップページ
// article: 記事ページなど、WebサイトのTOP以外のページ
// product: 製品の紹介ページ


const { title, description, thambnail, type } = Astro.props;
---

<meta property="og:url" content={Astro.request.url} />
<meta property="og:type" content={type} />
<meta property="og:title" content={title} />

{description != null ? <meta property="og:description" content={description} /> : <></>}
<meta property="og:site_name" content={SITE_TITLE} />
{thambnail != null ? <meta property="og:image" content={thambnail} /> : <></>}