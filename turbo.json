{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "build": {
      "dependsOn": ["^check-types", "^codegen", "^build"],
      "outputs": [".next/**", "dist/**"]
    },
    "start": {
      "dependsOn": ["^start"]
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "outputs": ["gql/**"]
    },
    "codegen:watch": {
      "persistent": true,
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
